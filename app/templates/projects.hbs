<div class="container">
  <h2>Projects</h2>
  <div class="form-group">
    {{input class="form-control" type='text' value=filter placeholder='Search'}}
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        {{sorting-key title='#'
                      key='id'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title='username'
                      key='author.username'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title='Remixed From'
                      key='remixed_from'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title='Version'
                      key='version'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title='Title'
                      key='title'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
          {{sorting-key title='Featured?'
                      key='featured'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
      </tr>
    </thead>
    <tbody>
      {{#each filteredProjects as |project|}}
        <tr>
          <td>{{project.id}}</td>
          <td>{{project.author.username}}</td>
          <td>{{project.remixed_from}}</td>
          <td>{{project.version}}</td>
          <td>{{project.title}}</td>
          <td>{{project.featured}}</td>
          <td>
            {{#link-to 'project' project}}
              <button class="btn btn-success">Show</button>
            {{/link-to}}
            {{#link-to 'project.edit' project}}
              <button class="btn btn-warning">Edit</button>
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
