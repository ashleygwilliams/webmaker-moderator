<div class="container">
  <h2>Projects</h2>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Remixed From</th>
        <th>Version</th>
        <th>Title</th>
        <th>Featured?</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
      {{#each model as |project|}}
        <tr>
          <td>{{project.id}}</td>
          <td>{{project.remixed_from}}</td>
          <td>{{project.version}}</td>
          <td>{{project.title}}</td>
          <td>{{project.featured}}</td>
          <td>
            {{#link-to 'project' project}}
              <button class="btn btn-success">Show</button>
            {{/link-to}}
            {{#link-to 'project.edit' project}}
              <button class="btn btn-warning">Edit</button>
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
